{
    "compilerOptions": {
        "incremental": true,
        "tsBuildInfoFile": ".tsbuildinfo",
        "target": "ES6",
        "module": "commonJS",
        "outDir": "dist",
        "allowJs": true,
        "declaration": true,
        "declarationDir": "dist/types"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist/*",
        "**/*.spec.ts"
    ]
}